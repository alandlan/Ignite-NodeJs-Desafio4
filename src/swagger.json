{
    "openapi": "3.0.0",
    "info": {
        "title": "Atlas",
        "description": "Essa é a documentação sobre o Atlas API",
        "version": "1.0.0",
        "contact": {
            "email": "alan4lann@gmail.com"
        }
    },
    "paths":{
        "/users":{
            "post":{
                "tags": ["Users"],
                "summary": "Cria um novo usuário",
                "requestBody":{
                    "required": true,
                    "description": "Campos obrigatórios para criação de um usuário.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email":{
                                        "type":"string"
                                    }
                                },
                                "example": {
                                    "name": "category name sample",
                                    "description": "category description sample"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201":{
                        "description": "Operação realizada com sucesso.",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties":{
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id":{
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "name":{
                                            "type": "string",
                                            "example": "RocketSeat"
                                        },
                                        "email":{
                                            "type": "string",
                                            "format": "email",
                                            "example": "oi@rocketseat.com.br"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                        
                                    }
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Email já está sendo utilizado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },"example": {
                                        "error": "This email is already in use."
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get":{
                "tags": ["Users"],
                "summary": "Retornar todos os usuários.",
                "description": "Somente o usuário admin pode acessar",
                "parameters": [
                    {
                      "name": "user_id",
                      "required": true,
                      "schema":{
                          "type": "string",
                          "format": "uuid"
                      },
                      "in": "header"
                    }
                ],
                "responses": {
                    "201":{
                        "description": "Operação realizada com sucesso.",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties":{
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id":{
                                            "type": "string",
                                            "format": "uuid"
                                        },
                                        "name":{
                                            "type": "string",
                                            "example": "RocketSeat"
                                        },
                                        "email":{
                                            "type": "string",
                                            "format": "email",
                                            "example": "oi@rocketseat.com.br"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                        
                                    },"example": [
                                        {
                                            "admin": true,
                                            "id": "bbfd0f84-dd78-4e63-bf5a-6ce4d9e5f8d6",
                                            "name": "Alan",
                                            "email": "teste@teste.com.br",
                                            "created_at": "2021-05-03T14:23:34.286Z",
                                            "updated_at": "2021-05-03T14:23:34.286Z"
                                        },{
                                            "admin": false,
                                            "id": "7a16f7c2-187e-487d-b9ec-ba8a5ecd3371",
                                            "name": "RocketSeat",
                                            "email": "teste@rocketseat.com.br",
                                            "created_at": "d2021-05-03T14:23:34.286Z",
                                            "updated_at": "2021-05-03T14:23:34.286Z"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Usuário sem permissão ou Usuário não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },"example": {
                                        "error": "You need to be an administrator to list all users."
                                    }
                                }
                            }
                        }
                    }
                }
            }

        }
    }

}